<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:mhwang="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_horizontal"
              android:orientation="horizontal"
    >

    <mhwang.com.view.WheelView
        android:id="@+id/wv_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        mhwang:itemNumber="3"
        mhwang:lineColor="@android:color/holo_blue_dark"
        mhwang:lineHeight="1.5dp"
        mhwang:maskHight="32dp"
        mhwang:noEmpty="true"
        mhwang:normalTextColor="#777"
        mhwang:normalTextSize="14sp"
        mhwang:selectedTextColor="#ff000000"
        mhwang:selectedTextSize="22sp"
        mhwang:unitHight="50dp"
        />

    <mhwang.com.view.WheelView
        android:id="@+id/wv_type_child"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        mhwang:itemNumber="3"
        mhwang:lineColor="@android:color/holo_blue_dark"
        mhwang:lineHeight="1.5dp"
        mhwang:maskHight="32dp"
        mhwang:noEmpty="true"
        mhwang:normalTextColor="#777"
        mhwang:normalTextSize="14sp"
        mhwang:selectedTextColor="#ff000000"
        mhwang:selectedTextSize="22sp"
        mhwang:unitHight="50dp"
        />

</LinearLayout>