<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:minHeight="@dimen/item_height_normal"
    android:layout_height="@dimen/item_height_normal">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_item_record_check"
        android:src="@drawable/ic_uncheck"
        android:visibility="gone"/>
    <TextView
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:textSize="@dimen/text_size_small"
        android:id="@+id/tv_item_record_date"/>
    <TextView
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:textSize="@dimen/text_size_small"
        android:id="@+id/tv_item_record_type"/>
    <TextView
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textSize="@dimen/text_size_small"
        android:textColor="@color/number_color"
        android:id="@+id/tv_item_record_money"/>

</LinearLayout>