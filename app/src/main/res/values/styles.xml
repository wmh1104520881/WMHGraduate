<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!---菜单按钮-->
    <style name="menu_bottom">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/margin_normal</item>
    </style>

    <!--标签大字体-->
    <style name="label">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <!--标签小字体-->
    <style name="label_small">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <!--横线-->
    <style name="line_horizonal">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/gray</item>
    </style>

    <!--输入框-->
    <style name="edit_input">
        <item name="android:layout_height">@dimen/item_height_normal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/margin_large</item>
        <item name="android:layout_marginRight">@dimen/margin_large</item>
        <item name="android:background">@drawable/edit_selector</item>
        <item name="android:paddingLeft">@dimen/margin_small</item>
    </style>
</resources>
